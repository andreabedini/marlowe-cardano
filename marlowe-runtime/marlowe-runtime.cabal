cabal-version: 2.2
name: marlowe-runtime
version: 0.0.0.0
license: Apache-2.0
license-files:
  LICENSE
  NOTICE
build-type: Simple
stability: experimental
category: Language

source-repository head
  type: git
  location: https://github.com/input-output-hk/marlowe-cardano
  subdir: marlowe-runtime

flag defer-plugin-errors
    description:
        Defer errors from the plugin, useful for things like Haddock that can't handle it.
    default: False
    manual: True

flag dump-splices
    description:
        Dump TH splices to debug closures
    default: False
    manual: True

common lang
  default-language: Haskell2010
  default-extensions: ExplicitForAll ScopedTypeVariables
                      DeriveGeneric StandaloneDeriving DeriveLift
                      DeriveFunctor DeriveFoldable
                      DeriveTraversable
  ghc-options:
    -Wall -Wnoncanonical-monad-instances
    -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities
  if flag(defer-plugin-errors)
    ghc-options: -fplugin-opt PlutusTx.Plugin:defer-errors
  if flag(dump-splices)
    ghc-options: -ddump-splices

library
  import: lang
  hs-source-dirs: src
  exposed-modules:
    Language.Marlowe.Runtime.Chain,
    Language.Marlowe.Runtime.Chain.Types,
    Language.Marlowe.Runtime.History,
    Language.Marlowe.Runtime.History.Types,
    Paths_marlowe_runtime
  build-depends:
      base >= 4.9 && < 5
    , binary
    , bytestring
    , cardano-api
    , cardano-ledger-alonzo
    , cardano-ledger-core
    , marlowe
    , aeson
    , monoidal-containers
    , containers
    , plutus-ledger
    , plutus-ledger-api
    , serialise
    , time
    , unlift
    , text
    , transformers
    , transformers-base

executable synctest
  import: lang
  hs-source-dirs: synctest
  main-is: Main.hs
  other-modules:
    Paths_marlowe_runtime
  autogen-modules:
    Paths_marlowe_runtime
  build-depends:
      base >= 4.9 && < 5
    , marlowe-runtime
    , cardano-api
    , cardano-config

executable banana
  import: lang
  hs-source-dirs: banana
  main-is: Main.hs
  other-modules:
    Paths_marlowe_runtime
  autogen-modules:
    Paths_marlowe_runtime
  build-depends:
      base >= 4.9 && < 5
    , marlowe-runtime
    , cardano-api
    , cardano-config
    , reactive-banana

executable distributed
  import: lang
  ghc-options: -threaded
  hs-source-dirs: distributed
  main-is: Main.hs
  other-modules:
    ChainSync
    ChainSync.Client
    ChainSync.Logger
    ChainSync.Store
    ChainSync.Database
    Control.Distributed.Protocol
    History
    History.Digest
    History.Digest.Worker
    History.Logger
    Paths_marlowe_runtime
  autogen-modules:
    Paths_marlowe_runtime
  build-depends:
      base >= 4.9 && < 5
    , binary
    , containers
    , marlowe-runtime
    , cardano-api
    , cardano-config
    , distributed-process
    , distributed-process-client-server
    , distributed-process-extras
    , distributed-process-supervisor
    , network-transport-tcp
    , time
